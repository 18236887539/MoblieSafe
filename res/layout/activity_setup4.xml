<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_title_height"
        android:background="@color/home_title_bg"
        android:gravity="center"
        android:text="4.还差一步即将设置完成"
        android:textColor="#000000"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_proteting"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_margin="10dip"
        android:textSize="18sp"
        android:text="您还没有开启防盗保护" />

    <RelativeLayout
        android:layout_marginTop="50dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/setup_button_padding" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/phone" />

        <Button
            style="@style/button_pre_style"
            android:layout_alignParentLeft="true"
            android:text="上一步" />

        <Button
            style="@style/button_next_style"
            android:layout_alignParentRight="true"
            android:text="设置完成" />
    </RelativeLayout>

</LinearLayout>